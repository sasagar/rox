{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "singleAttributePerLine": false,
  "ignorePatterns": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.waku",
    "**/*.d.ts",
    "**/pages.gen.ts",
    "**/drizzle/**",
    "**/bun.lock"
  ]
}